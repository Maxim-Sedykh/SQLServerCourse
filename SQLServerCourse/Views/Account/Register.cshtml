@model SQLServerCourse.Domain.ViewModels.Account.RegisterViewModel

@{
    ViewData["Title"] = "Регистрация | SQLCourse";
}

<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-3">
            </div>
            <div class="col-md-4 col-sm-6  main-content-login">
                <div class="login-panel mt-5 br-bottom-40">
                    <div class="py-5">
                        <div>
                            <p class="text-white fs-2" align="center">
                                Регистрация аккаунта | SQLCourse
                            </p>
                        </div>
                        <div class="px-5">
                            <form asp-controller="Account" asp-action="Register">
                                <div asp-validation-summary="All" style="min-height:20px;" class="text-black text-center mb-2 fs-5"></div>
                                <input asp-for="Login" class="form-control br-40 my-3" placeholder="Логин" type="text">
                                <input autocomplete="new-password" asp-for="Password" class="form-control br-40 my-3" placeholder="Пароль" type="password">
                                <div class="text-center">
                                    <button class="btn br-40 bd-blue-500" type="submit">
                                        Зарегистрироваться
                                    </button>
                                </div>
                            </form>
                        </div>
                        <div align="center" class="mt-5">
                            <p class="text-white fs-5">
                                У вас есть аккаунт в SQLCourse? <br />
                            </p>
                            <a asp-controller="Account" asp-action="Login" class="fs-5 text-white fs-5 fw-bold">
                                Войдите в аккаунт!
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-3">
            </div>
        </div>
    </div>
</div>

