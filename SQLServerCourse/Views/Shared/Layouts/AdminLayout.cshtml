<!DOCTYPE html>
<html lang="en" @*data-bs-theme="light"*@>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/baseStyles.css" />
    <link rel="stylesheet" href="~/css/main.css" />
    <link rel="stylesheet" href="~/css/review.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">*@
</head>
<body>
    <div class="wrapper">
        <header>
            <div class="container-fluid px-4" style="max-width:1600px; border-radius:0px 0px 40px 40px; background: var(--color-darkblue1);">
                <nav class="navbar navbar-expand-lg navbar-light text-white pt-0">
                    <a class="navbar-brand text-white me-0" href="/">SQLCourse MSSQL</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <a class="text-white d-block ms-2 me-4 my-auto fs-6" asp-controller="User" asp-action="gfhi">Страница админа</a>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <a class="nav-link active px-0  text-white" aria-current="page" href="/">На главную</a>
                        <div class="navItemRight" style="margin-left:auto;">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0 text-white">
                                <li class="nav-item">
                                    <a class="nav-link my-auto" style="color:#eae5ec; font-size:14px;">@User.Identity.Name</a>
                                </li>
                                <li class="nav-item dropdown navItemRight">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Аккаунт
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDropdown">

                                        <li>
                                            <a class="dropdown-item " asp-controller="PersonalProfile" asp-action="GetPersonalProfile">Личный кабинет</a>
                                        </li>
                                        <li><a class="dropdown-item" asp-controller="Admin" asp-action="ChangeUserData">Админ</a></li>
                                        <li>
                                            <form method="post" asp-controller="Account" asp-action="Logout">
                                                <button class="dropdown-item">Выйти</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
            <nav class="navbar" style="height:80px;">
                <div class="admin-list-group mx-auto">
                    <ul class="list-group list-group-horizontal list-group-rou">
                        <li class="list-group-item admin-list-item" style="border-radius: 20px 0px 0px 20px"><a asp-controller="Admin" asp-action="ChangeUserData" class="d-block h-100 w-100 text-white text-decoration-none">Пользователи</a></li>
                        <li class="list-group-item admin-list-item"><a asp-controller="Review" asp-action="GetReviews" class="d-block h-100 w-100 text-white text-decoration-none">Отзывы</a></li>
                        <li class="list-group-item admin-list-item" style="border-radius: 0px 20px 20px 0px"><a asp-controller="Admin" asp-action="ChangeLessonData" class="d-block h-100 w-100 text-white text-decoration-none">Уроки</a></li>
                    </ul>
                </div>
            </nav>
        </header>
        <main>
            @RenderBody()
        </main>
    </div>

    <div class="modal fade" id="wideModalWindow" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" style="max-width: 800px;">
            <div class="modal-content text-white border border-white" style="border-radius:40px;">
                <div class="modal-header d-flex ps-5" style="background: var(--color-darkaqua); border-radius:40px 40px 0px 0px;">
                    <div class="mx-auto"><p class="fs-3 text-white">Модальное окно</p></div>
                    <div style="float:right">
                        <button type="button" class="btn-close btn-close-white me-2"
                                data-bs-dismiss="modal" aria-label="Закрыть"></button>
                    </div>
                </div>
                <div class="modal-body" style="border-radius:0px 0px 40px 40px;">
                </div>
            </div>
        </div>
    </div>

    <footer id="footer" class="footer">
        <div class="container-fluid h100perc text-black">
            <div class="container border-top">
                <div class="row text-center">
                    <div class="col-md-6 col-sm-12 h100perc">
                        SQLCourse In MSSQL© +79493597126
                    </div>
                    <div class="col-md-6 col-sm-12  h100perc">
                        m.sedykh@mail.ru 2023-2024
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://kit.fontawesome.com/1e1acde3d7.js" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/modal.js"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>*@
    @await RenderSectionAsync("pageScripts", required: false)
</body>
</html>
