@using SQLServerCourse.Domain.ViewModels.User
@model UserEditingViewModel

<div class="container">
    <form id="formSaveUser">
        <div class="row p-3 border border-bottom border-white br-40 pb-4">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Id" class="col-form-label text-white disabled"></label>
                    <input asp-for="@Model.Id" type="text" class="form-control br-40">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Login" class="col-form-label text-white"></label>
                    <input asp-for="@Model.Login" type="text" class="form-control br-40">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Password" class="col-form-label text-white"></label>
                    <input asp-for="@Model.Password" type="password" class="form-control br-40">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Role" class="col-form-label text-white"></label> 
                    <select asp-for="@Model.Role" class="form-select" id="userRoleId"></select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="@Model.Name" class="col-form-label text-white"></label>
                    <input asp-for="@Model.Name" type="text" class="form-control br-40">
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Surname" class="col-form-label text-white"></label>
                    <input asp-for="@Model.Surname" type="text" class="form-control br-40">
                </div>
                <div class="form-check">
                    <input asp-for="@Model.IsEditAble" type="checkbox" class="form-check-input mt-2">
                    <label asp-for="@Model.IsEditAble" class="col-form-label text-white"></label>
                </div>
                <div class="form-check">
                    <input asp-for="@Model.IsExamCompleted" type="checkbox" class="form-check-input mt-2">
                    <label asp-for="@Model.IsExamCompleted" class="col-form-label text-white"></label>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.CurrentGrade" class="col-form-label text-white"></label>
                    <input asp-for="@Model.CurrentGrade" type="number" class="form-control br-40">
                </div>
                <div class="form-group">
                    <label asp-for="@Model.LessonsCompleted" class="col-form-label text-white"></label>
                    <input asp-for="@Model.LessonsCompleted" type="number" class="form-control br-40">
                </div>
            </div>
        </div>
        <div class="float-end mt-3 w-50">
            <btn class="btn mx-3 br-40 float-end bd-red-700">Отмена</btn>
            <btn class="btn ms-2 br-40 float-end bd-cyan-500">Сохранить</btn>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<script>
    var mySelect = document.getElementById('userRoleId');
    var select2 = new Select2(mySelect, {
        placeholder: 'Select an option',
        allowClear: true
    });
</script>


